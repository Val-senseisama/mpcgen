{
  "name": "mcp-generator",
  "version": "1.0.0",
  "description": "A powerful Node.js tool that automatically generates comprehensive Model Context Protocol (MCP) manifests by extracting tools and resources from your codebase with advanced analysis capabilities.",
  "main": "dist/index.js",
  "bin": {
    "mcp-generator": "./dist/index.js"
  },
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "generate": "npm run build && npm start",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "typescript",
    "code-analysis",
    "ai-tools",
    "api-documentation"
  ],
  "author": "David Val-Izevbig <valizevbigedavid@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/val-senseisama/mcp-generator.git"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "ts-morph": "^21.0.1",
    "fast-glob": "^3.3.2",
    "sql-ddl-to-json-schema": "^1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
